<Root>:
    label_res: label_res


    BoxLayout:

        spacing: 40
        padding: 40
        orientation: 'vertical'

        Label:
            size_hint: (1, .5)
            text: "Welcome to our prediction app! Upload your song;)"

        Widget:
        Label:
            size_hint: (1, .3)
            id: label_res

        BoxLayout:

            size_hint: (1, .2)

            Button:
                text: 'Load song'
                on_release: root.show_load_song()

            Button:
                text: 'Load text'
                on_release: root.show_load_text()

            Button:
                text: 'Save'
                on_release: root.show_save()

            Button:
                text: 'Result'
                on_release: root.result()



<LoadSongDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            size_hint: (.9, .9)
            id: filechooser

        BoxLayout:
            size_hint: (.9, .1)
            spacing: 30
            Button:
                text: "<--"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<LoadTextDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            size_hint: (.9, .9)
            id: filechooser

        BoxLayout:
            size_hint: (.9, .1)
            spacing: 30
            Button:
                text: "<--"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            size_hint: (.9, .8)
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input

            size_hint: (.9, .1)
            multiline: False

        BoxLayout:

            size_hint: (.9, .1)
            Button:
                text: "<--"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)